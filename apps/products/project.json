{
  "name": "products",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/products/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/products"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/products/package.json",
        "{workspaceRoot}/dist/apps/products/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/products/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build auth --watch",
          "nodemon --delay 2 dist/apps/products/main.js"
        ],
        "parallel": true
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "products:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "products:build:development"
        },
        "production": {
          "buildTarget": "products:build:production"
        }
      }
    },
    "generate-drizzle": {
      "command": "drizzle-kit generate",
      "options": {
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "migrate-drizzle": {
      "command": "drizzle-kit migrate",
      "options": {
        "cwd": "{projectRoot}"
      }
    }
  }
}
